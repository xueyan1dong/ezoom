<?xml version="1.0" encoding="utf-8" ?>

<Table name="Product Group">

  <Header>Product Group Configuration</Header>

  <Column name ="name">

    <DisplayName>Product Group Name</DisplayName>

    <IsEnable>true</IsEnable>

    <UI>Textbox</UI>

    <TextBoxLength>255</TextBoxLength>

  </Column>

  <Column name ="if_active">

    <DisplayName>If Active</DisplayName>

    <IsEnable>true</IsEnable>

    <UI>Checkbox</UI>
  </Column>
  <Column name ="description">

    <DisplayName>Description</DisplayName>

    <IsEnable>true</IsEnable>

    <UI>Textbox</UI>

    <TextBoxLength>255</TextBoxLength>

  </Column>
   <Column name ="default_location_id">

    <DisplayName>Default Location</DisplayName>

    <IsEnable>true</IsEnable>

    <UI>Dropdown</UI>

    <DropdownQuery dcol="0" vcol="1">SELECT 'N/A', 0 UNION SELECT l.name, l.id from location l order by 2</DropdownQuery>

  </Column>
  <Column name ="prefix">

    <DisplayName>Prefix</DisplayName>

    <IsEnable>true</IsEnable>

    <UI>Textbox</UI>

    <TextBoxLength>20</TextBoxLength>

  </Column>

  <Column name ="surfix">

    <DisplayName>Surfix</DisplayName>

    <IsEnable>true</IsEnable>

    <UI>Textbox</UI>

    <TextBoxLength>20</TextBoxLength>

  </Column>
   <Column name ="comment">

    <DisplayName>Comments</DisplayName>

    <IsEnable>true</IsEnable>

    <UI>Textbox</UI>

    <TextBoxLength>255</TextBoxLength>

  </Column>
</Table>