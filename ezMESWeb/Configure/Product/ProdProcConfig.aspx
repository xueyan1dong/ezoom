       <asp:SqlDataSource ID="sdsClientDocConfigGrid" runat="server" 
           ConnectionString="<%$ ConnectionStrings:ezmesConnectionString %>" 
           DeleteCommand="DELETE FROM `product_process` WHERE process_id=?" 
           ProviderName="System.Data.Odbc" 
       SelectCommand=" 
SELECT pp.process_id,
       pc.name as process_name,
       pp.priority,
       pr.name as priority_name,
       pp.recorder,
       concat(e.firstname, ' ', e.lastname) as recorder_name,
       pp.comment
  FROM product_process pp
LEFT JOIN process pc ON pc.id = pp.process_id
LEFT JOIN priority pr ON pr.id = pp.priority
LEFT JOIN employee e ON e.id = pp.recorder
 WHERE pp.product_id = ?"     
       >
           <SelectParameters>
               <asp:ControlParameter ControlID="dpProduct" DefaultValue="0" Name="prodid" 
                   PropertyName="SelectedValue" />
           </SelectParameters>

        </asp:SqlDataSource>
        
