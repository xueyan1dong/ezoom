       </asp:FormView>
       
       <asp:SqlDataSource ID="sdsClientDocConfig" runat="server" 
       ConnectionString="<%$ ConnectionStrings:ezmesConnectionString %>" 
       ProviderName="System.Data.Odbc"  
       SelectCommand="SELECT pp.process_id,
       pc.name as process_name,
       pp.priority,
       pp.comment
  FROM product_process pp
LEFT JOIN process pc ON pc.id = pp.process_id
WHERE pp.product_id = ? AND pp.process_id = ?" 
