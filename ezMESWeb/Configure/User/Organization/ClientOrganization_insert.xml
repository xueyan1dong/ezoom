<?xml version="1.0" encoding="utf-8" ?>
<Table name="organization">
  <Header>Organization</Header>
  <Column name ="name">
    <DisplayName>Name</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Textbox</UI>
    <TextBoxLength>255</TextBoxLength>
  </Column>
  <Column name ="status">
    <DisplayName>Status</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Dropdown</UI>
    <EnumQuery dcol="0" vcol="0"> show columns from organization like 'status'</EnumQuery>
  </Column>
  <Column name ="lead_employee">
    <DisplayName>Lead Employee</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Dropdown</UI>
    <DropdownQuery dcol="0" vcol="1">Select CONCAT(e.firstname,' ',e.lastname) as name, e.id from employee e where user_type = 'client' order by 1</DropdownQuery>
  </Column>
  <Column name ="phone">
    <DisplayName>Phone</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Textbox</UI>
    <TextBoxLength>45</TextBoxLength>
  </Column>
  <Column name ="email">
    <DisplayName>Email</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Textbox</UI>
    <TextBoxLength>45</TextBoxLength>
  </Column>
  <Column name ="description">
    <DisplayName>Description</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Textbox</UI>
    <TextBoxLength>255</TextBoxLength>
  </Column>
  <Column name="root_company">
    <DisplayName>Root Company</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Dropdown</UI>
    <DropdownQuery dcol="0" vcol="1">Select c.name, c.id from client c order by 1</DropdownQuery>
  </Column>
  <Column name ="parent_organization">
    <DisplayName>Parent Organization</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Dropdown</UI>
    <DropdownQuery dcol="0" vcol="1">Select o.name, o.id from organization o where root_org_type = 'client' order by 1</DropdownQuery>
  </Column>
  <Column name="root_org_type">
    <DisplayName>Root Organization Type</DisplayName>
    <IsEnable>true</IsEnable>
    <UI>Dropdown</UI>
    <DropdownQuery dcol="0" vcol="1">Select r.name, r.name from root_org_type r</DropdownQuery>
  </Column>
</Table>


